 <field name="vehicles" type="sql" class="inputbox" onchange="this.form.submit();" translate = "COM_EINSATZKOMPONENTE_FAHRZEUG"
                                    query="SELECT '' AS id, 'COM_EINSATZKOMPONENTE_FAHRZEUG' AS name UNION SELECT id, name FROM #__eiko_fahrzeuge" key_field="id" value_field="name"/> 

									
